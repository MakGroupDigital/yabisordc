rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour le dossier 'posts' - où les médias des publications sont stockés
    match /posts/{userId}/{allPaths=**} {
      // Permettre la lecture à tous les utilisateurs authentifiés
      allow read: if request.auth != null;
      
      // Permettre l'upload uniquement aux utilisateurs authentifiés
      // L'utilisateur ne peut uploader que dans son propre dossier
      // Simplifié temporairement pour déboguer
      allow write: if request.auth != null 
        && request.auth.uid == userId;
      
      // Permettre la suppression uniquement au propriétaire
      allow delete: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // Règles pour les avatars de profil
    match /avatars/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.contentType.matches('image/.*')
        && request.resource.size < 5 * 1024 * 1024; // 5 MB max pour les avatars
      allow delete: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // Refuser l'accès à tous les autres chemins par défaut
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

